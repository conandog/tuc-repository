<Window x:Name="LoginEvent" x:Class="QuanLyPhongMach.WdLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Height="23" Margin="131,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" MaxLength="20" MaxLines="1" TextChanged="tbUsername_TextChanged" KeyDown="tbUsername_KeyDown"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="131,75,0,0" VerticalAlignment="Top" Width="188" KeyDown="pbPassword_KeyDown"/>
        <TextBlock HorizontalAlignment="Left" Margin="70,36,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,76,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <Button x:Name="btLogin" Content="Đăng nhập" HorizontalAlignment="Center" Margin="159,125,159,0" VerticalAlignment="Top" Width="76" Click="btLogin_Click" IsEnabled="False"/>
    </Grid>
</Window>
