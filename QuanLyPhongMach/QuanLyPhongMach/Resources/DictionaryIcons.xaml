                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Image Stretch="Fill" Source="/Resources/Icons/ChucNang/icon_them_disable.png"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
