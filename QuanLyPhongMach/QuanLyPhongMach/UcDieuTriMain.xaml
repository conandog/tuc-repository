<UserControl x:Name="UcMain" x:Class="QuanLyPhongMach.UcDieuTriMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyPhongMach"
             xmlns:Model="clr-namespace:Core;assembly=Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="800" Height="600" Loaded="UcMain_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Margin="0,10,0,0" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold">ĐIỀU TRỊ</TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="80"/>
                <RowDefinition />
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btHuy" Content="HỦY" Height="30" Margin="0,0,50,10" Grid.Row="7" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" TabIndex="101" Click="btHuy_Click"/>
            <Button x:Name="btHoanTat" Content="HOÀN TẤT" Height="30" Margin="50,0,0,10" Grid.Row="7" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="80" Grid.Column="1" TabIndex="103" Click="btHoanTat_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text="Triệu chứng:" VerticalAlignment="Top" Grid.Row="2"/>
            <TextBox x:Name="tbTrieuChung" HorizontalAlignment="Left" Height="23" Margin="81,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="649" Grid.Row="2" TabIndex="29" Grid.ColumnSpan="2" MaxLength="200"/>
            <TextBlock HorizontalAlignment="Left" Margin="34,10,0,0" TextWrapping="Wrap" Text="Điều trị:" VerticalAlignment="Top" Grid.Row="3"/>
            <Border BorderBrush="Gray" BorderThickness="1" DockPanel.Dock="Top"
                    Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="70" Margin="80,7,0,0" Grid.Row="3" VerticalAlignment="Top" Width="650">
                <Grid>
                    <CheckBox x:Name="chbIsKhamBenh" Content="Khám bệnh" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True" TabIndex="31"/>
                    <CheckBox x:Name="chbIsChich_UongThuoc" Content="Chích thuốc / uống thuốc" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" IsChecked="True" TabIndex="33"/>
                    <CheckBox x:Name="chbIsTruyenDichTinhMach" Content="Truyền dịch tĩnh mạch" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top" TabIndex="35"/>
                    <TextBlock HorizontalAlignment="Left" Margin="200,34,0,0" TextWrapping="Wrap" Text="Khác:" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbKhac" HorizontalAlignment="Left" Height="23" Margin="233,31,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="407" TabIndex="37" MaxLength="50"/>
                </Grid>
            </Border>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TOA THUỐC" VerticalAlignment="Top" Grid.Row="4" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="226,13,0,0" TextWrapping="Wrap" Text="Tổng cộng:" VerticalAlignment="Top" Grid.Row="5" Grid.Column="1"/>
            <TextBox x:Name="tbTongTien" HorizontalAlignment="Left" Height="23" Margin="290,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100" Grid.Row="5" Grid.Column="1" TabIndex="43" HorizontalContentAlignment="Right" MaxLength="11"/>
            <TextBlock HorizontalAlignment="Left" Margin="17,10,0,0" TextWrapping="Wrap" Text="Lời dặn dò:" VerticalAlignment="Top" Grid.Row="4"/>
            <TextBox x:Name="tbLoiDanDo" HorizontalAlignment="Left" Height="100" Margin="17,31,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="373" Grid.Row="4" TabIndex="39" MaxLength="200"/>
            <DataGrid Margin="10,31,0,0" Grid.Row="4" Width="380" Grid.Column="1" x:Name="dgToaThuoc" AutoGenerateColumns="False" HorizontalAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" TabIndex="41" CanUserAddRows="True" CanUserDeleteRows="True" CanUserSortColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False" LoadingRow="dgToaThuoc_LoadingRow" UnloadingRow="dgToaThuoc_UnloadingRow" >
                <DataGrid.Columns>
                    <DataGridComboBoxColumn x:Name="cbThuoc" ClipboardContentBinding="{x:Null}" DisplayMemberPath="Ten" Header="Tên" SelectedItemBinding="{Binding Thuoc}" />
                    <DataGridComboBoxColumn x:Name="cbDuongCap" ClipboardContentBinding="{x:Null}" Header="Đường cấp" SelectedItemBinding="{Binding DuongCap}" />
                </DataGrid.Columns>
            </DataGrid>
            <GroupBox Header="KHÁCH HÀNG" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" Width="780">
                <Grid HorizontalAlignment="Center" Height="30" Width="768" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" Margin="10,8,0,0" TextWrapping="Wrap" Text="*Tên chủ:" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="389,8,0,0" TextWrapping="Wrap" Text="Địa chỉ:" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbDiaChi" HorizontalAlignment="Left" Height="23" Margin="433,5,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="325" TabIndex="15" MaxLength="100"/>
                    <ComboBox x:Name="cbKhachHang" HorizontalAlignment="Left" Margin="64,5,0,0" VerticalAlignment="Top" Width="150" DisplayMemberPath="Ten" ItemsSource="{Binding}" IsEditable="True" TabIndex="11" SelectionChanged="cbKhachHang_SelectionChanged"/>
                    <TextBlock HorizontalAlignment="Left" Margin="247,8,0,0" TextWrapping="Wrap" Text="ĐT:" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbDienThoai" HorizontalAlignment="Left" Height="23" Margin="269,5,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100" TabIndex="13" MaxLength="20"/>
                </Grid>
            </GroupBox>
            <GroupBox Header="THÚ" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="90" Width="780" Grid.RowSpan="3">
                <Grid HorizontalAlignment="Left" Height="70" Width="768" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="10,8,0,0" TextWrapping="Wrap" Text="*Tên thú:" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbPet" HorizontalAlignment="Left" Margin="64,5,0,0" VerticalAlignment="Top" Width="150" DisplayMemberPath="Ten" ItemsSource="{Binding}" IsEditable="True" TabIndex="17" SelectionChanged="cbPet_SelectionChanged"/>
                    <TextBlock HorizontalAlignment="Left" Margin="283,8,0,0" TextWrapping="Wrap" Text="Nhóm:" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbPetGroup" HorizontalAlignment="Left" Margin="324,5,0,0" VerticalAlignment="Top" Width="50" DisplayMemberPath="Ten" ItemsSource="{Binding}" TabIndex="19"/>
                    <TextBlock HorizontalAlignment="Left" Margin="271,13,0,0" TextWrapping="Wrap" Text="Giới tính:" VerticalAlignment="Top" Grid.Row="1"/>
                    <ComboBox x:Name="cbGioiTinh" HorizontalAlignment="Left" Margin="324,10,0,0" VerticalAlignment="Top" Width="50" Grid.Row="1" SelectedIndex="0" TabIndex="23" >
                        <ComboBoxItem Content="Đực"/>
                        <ComboBoxItem Content="Cái"/>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" Margin="32,13,0,0" TextWrapping="Wrap" Text="Tuổi:" VerticalAlignment="Top" Grid.Row="1"/>
                    <TextBox x:Name="tbTuoi" HorizontalAlignment="Left" Height="23" Margin="63,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="30" Grid.Row="1" TabIndex="21" MaxLength="2" HorizontalContentAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text="Trọng lượng:" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
                    <TextBox x:Name="tbTrongLuong" HorizontalAlignment="Left" Height="23" Margin="83,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="40" Grid.Row="1" TabIndex="25" MaxLength="4" HorizontalContentAlignment="Center" Grid.Column="1"/>
                    <TextBlock x:Name="textDonViTinh" HorizontalAlignment="Left" Margin="128,13,0,0" TextWrapping="Wrap" Text="kg" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="263,13,0,0" TextWrapping="Wrap" Text="Nhiệt độ:" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
                    <TextBox x:Name="tbNhietDo" HorizontalAlignment="Left" Height="23" Margin="317,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="40" Grid.Row="1" TabIndex="27" MaxLength="4" HorizontalContentAlignment="Center" Grid.Column="1"/>
                    <TextBlock x:Name="textDonViTinh_Copy" HorizontalAlignment="Left" Margin="362,13,0,0" TextWrapping="Wrap" Text="°C" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
