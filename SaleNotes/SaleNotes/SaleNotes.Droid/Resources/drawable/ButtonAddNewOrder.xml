<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="30dp" />
      <gradient android:angle="-90" android:startColor="@color/button_add_new_order_event" android:endColor="@color/button_add_new_order" />
      <stroke android:width="0.5dp" android:color="@color/button_add_new_order_border"/>
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="30dp" />
      <solid android:color="@color/button_add_new_order_event"/>
      <stroke android:width="0.5dp" android:color="@color/button_add_new_order_border"/>
    </shape>
  </item>
  <item >
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
      <solid android:color="@color/button_add_new_order" />
      <corners android:radius="30dp" />
      <stroke android:width="0.5dp" android:color="@color/button_add_new_order_border"/>
    </shape>
  </item>
</selector>