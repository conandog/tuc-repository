<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutDetailsItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/BorderDetailLayout">
    <ImageView
        android:id="@+id/iconHeaderDetailsItem"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/DetailsItemRectangleOdd" />
    <RelativeLayout
        android:id="@+id/relativeLayoutDetailsItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/relativeLayoutDetailsItemEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/textNameDetailsItemEdit"
                android:text="Tên sản phẩm: "
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <EditText
                android:id="@+id/editTextNameValueDetailsItemEdit"
                android:background="@android:color/transparent"
                android:text="Áo sơ mi"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@id/textNameDetailsItemEdit" />
            <TextView
                android:id="@+id/textCodeDetailsItemEdit"
                android:text="Mã sản phẩm: "
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextNameValueDetailsItemEdit"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <EditText
                android:id="@+id/editTextCodeValueDetailsItemEdit"
                android:background="@android:color/transparent"
                android:text="ASM-1"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/editTextNameValueDetailsItemEdit"
                android:layout_toRightOf="@id/textCodeDetailsItemEdit" />
            <TextView
                android:id="@+id/textQuantityDetailsItemEdit"
                android:text="Số lượng: "
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextCodeValueDetailsItemEdit"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <EditText
                android:id="@+id/editTextQuantityValueDetailsItemEdit"
                android:background="@android:color/transparent"
                android:text="5"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/editTextCodeValueDetailsItemEdit"
                android:layout_toRightOf="@id/textQuantityDetailsItemEdit" />
            <TextView
                android:id="@+id/textPriceDetailsItemEdit"
                android:text="Đơn giá: "
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextQuantityValueDetailsItemEdit"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <EditText
                android:id="@+id/editTextPriceValueDetailsItemEdit"
                android:background="@android:color/transparent"
                android:text="150.000 VND/cái"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/editTextQuantityValueDetailsItemEdit"
                android:layout_toRightOf="@id/textPriceDetailsItemEdit" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayoutBinDetailsItemEdit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <ImageButton
            android:id="@+id/btBinDetailsItemEdit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/Bin" />
    </RelativeLayout>
</LinearLayout>