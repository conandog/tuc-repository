<UserControl x:Class="QuanLyDonHang.InputNhaThuoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Model="clr-namespace:Model;assembly=Model"
             mc:Ignorable="d" 
             d:DesignHeight="580" d:DesignWidth="1170" Width="1170" Height="580" Background="LightGray" Loaded="inputNhaThuocUC_Loaded">
    <Grid>
        <Button x:Name="btAdd" Content="Thêm" HorizontalAlignment="Left" Height="22" Margin="22,25,0,0" VerticalAlignment="Top" Width="41" Click="btAdd_Click"/>
        <Button x:Name="btDelete" Content="Xóa" HorizontalAlignment="Left" Height="22" Margin="82,25,0,0" VerticalAlignment="Top" Width="39" Click="btDelete_Click" IsEnabled="False"/>
        <Button x:Name="btEdit" Content="Sửa" HorizontalAlignment="Left" Height="22" Margin="142,25,0,0" VerticalAlignment="Top" Width="40" Click="btEdit_Click" IsEnabled="False"/>
        <DataGrid x:Name="dgShowInfo" CanUserAddRows="False" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="344" Margin="20,100,0,0" VerticalAlignment="Top" Width="1120" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionMode="Extended" SelectionChanged="dgShowInfo_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="chbNTItem" IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}, Mode=TwoWay}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Id}" ClipboardContentBinding="{x:Null}" Header="Id" IsReadOnly="True" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding CodeMer}" ClipboardContentBinding="{x:Null}" Header="CodeMer" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding PharmacyName}" ClipboardContentBinding="{x:Null}" Header="PharmacyName" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Address}" ClipboardContentBinding="{x:Null}" Header="Address" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Street}" ClipboardContentBinding="{x:Null}" Header="Street" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Other}" ClipboardContentBinding="{x:Null}" Header="Other" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Ward}" ClipboardContentBinding="{x:Null}" Header="Ward" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding District}" ClipboardContentBinding="{x:Null}" Header="District" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Province}" ClipboardContentBinding="{x:Null}" Header="Province" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Area}" ClipboardContentBinding="{x:Null}" Header="Area" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Zone}" ClipboardContentBinding="{x:Null}" Header="Zone" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Pharmacist}" ClipboardContentBinding="{x:Null}" Header="Pharmacist" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding PharmacyOwner}" ClipboardContentBinding="{x:Null}" Header="PharmacyOwner" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Phone}" ClipboardContentBinding="{x:Null}" Header="Phone" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Cellphone}" ClipboardContentBinding="{x:Null}" Header="Cellphone" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Province}" ClipboardContentBinding="{x:Null}" Header="Province" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding InChargeFYLCD}" ClipboardContentBinding="{x:Null}" Header="InChargeFYLCD" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding RL}" ClipboardContentBinding="{x:Null}" Header="RL" IsReadOnly="True"/>
            </DataGrid.Columns>
            <DataGrid.DataContext>
                <Model:UserGroup/>
            </DataGrid.DataContext>
        </DataGrid>
        <Button x:Name="btImportExcel" Content="Nhập excel" HorizontalAlignment="Left" Height="22" Margin="210,25,0,0" VerticalAlignment="Top" Width="75" Click="btImportExcel_Click"/>
        <CheckBox x:Name="chbSelect" Content="Select / deselect all" HorizontalAlignment="Left" Height="17" Margin="22,449,0,0" VerticalAlignment="Top" Width="123" Click="chbSelect_Click"/>
    </Grid>
</UserControl>
