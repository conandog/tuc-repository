        <TextBox x:Name="tbNhaThuoc" HorizontalAlignment="Left" Height="23" Margin="524,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" TextChanged="tbNhaThuoc_TextChanged"/>
        <Button x:Name="btXuatExcel" Content="Xuất excel" HorizontalAlignment="Left" Height="29" Margin="1046,533,0,0" VerticalAlignment="Top" Width="92" Click="btXuatExcel_Click"/>
